{
    "title": "Apple UniversalControl 한영전환 도구",
    "rules": [
           {
            "description": "Apple 유니버셜컨트롤 오른쪽 Win(Command)키 한영전환",
            "manipulators": [
                { 
            "type": "basic",
            "conditions": [
                {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": [
                                "com.apple.universalcontrol"
                            ]
                        }
                    ],
            "parameters": {
                "basic.to_if_held_down_threshold_milliseconds": 500
            },
                    "from": {
                        "key_code": "right_command",
                        "modifiers": { "optional": [ "any" ] }
                    },
                    "to": {
                        "key_code": "fn"
                    },
          "to_if_held_down": [
                {
                    "key_code": "right_command",
                    "modifiers": [
                        "fn"
                    ]
                }
            ]
				}
					]
        },  {
            "description": "Apple 유티버셜컨트롤 Karabiner 키 최적화용 한영전환 길게 누를 시 이모티콘",
            "manipulators": [
                { 
            "type": "basic",
            "conditions": [
                {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": [
                                "com.apple.universalcontrol"
                            ]
                        }
                    ],
            "parameters": {
                "basic.to_if_held_down_threshold_milliseconds": 500
            },
                    "from": {
                        "key_code": "left_option",
                        "modifiers": { "optional": [ "any" ] }
                    },
                    "to": {
                        "key_code": "fn"
                    },
          "to_if_held_down": [
                {
                    "key_code": "right_option",
                    "modifiers": [
                        "fn"
                    ]
                }
            ]
				}
					]
        },  {
            "description": "Apple_유니버셜컨트롤 오른쪽 Alt(Option)키 한영전환",
            "manipulators": [
                { 
            "type": "basic",
            "conditions": [
                {
                    "type": "frontmost_application_if",
                    "bundle_identifiers": [
                                "com.apple.universalcontrol"
                            ]
                        }
                    ],
            "parameters": {
                "basic.to_if_held_down_threshold_milliseconds": 500
            },
                    "from": {
                        "key_code": "right_option",
                        "modifiers": { "optional": [ "any" ] }
                    },
                    "to": {
                        "key_code": "fn"
                    },
          "to_if_held_down": [
                {
                    "key_code": "fn",
                    "modifiers": [
                        "e"
                    ]
                }
            ]
				}
					]
        }
    ]
}
